{
  "name": "react-npm-package-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "build": "webpack --config webpack.config.babel.js",
    "release": "webpack --p --config webpack.config.babel.js",
    "test": "jest",
    "coverage": "jest --coverage",
    "deploy": "",
    "lint": "eslint ./src",
    "build-examples": "webpack --config examples/webpack.config.babel.js --progress",
    "start": "webpack-dev-server --config examples/webpack.config.live.babel.js"
  },
  "dependencies": {
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "babel-jest": "^22.1.0",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.16",
    "css-loader": "^0.28.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.9.0",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^22.1.4",
    "node-sass": "^4.7.2",
    "react-addons-test-utils": "^15.5.1",
    "react-hot-loader": "next",
    "react-test-renderer": "^16.0.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.1",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.4.5"
  },
  "jest": {
    "modulePaths": [
      "./src"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "scss"
    ],
    "setupFiles": ["<rootDir>/config/jest/setup.js"],
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ]
  }
}
